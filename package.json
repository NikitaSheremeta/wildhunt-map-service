{
  "name": "wldhunt-map-service",
  "version": "1.0.0",
  "description": "Micro service for uploading and providing images of chunks of the Minecraft server map",
  "scripts": {
    "serve": "cross-env NODE_ENV=development npm run watch-node",
    "build": "rm -rf dist && webpack --mode production",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "watch-node": "nodemon",
    "eslint": "eslint --fix './**/*.js'",
    "prettier": "prettier --write './**/*.js'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --relative"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "browserslist": [
    "> 0.25%",
    "last 2 versions",
    "not dead",
    "not op_mini all"
  ],
  "devDependencies": {
    "@babel/cli": "^7.21.5",
    "@babel/core": "^7.21.8",
    "@babel/eslint-parser": "^7.21.8",
    "@babel/node": "^7.20.7",
    "@babel/preset-env": "^7.21.5",
    "babel-loader": "^9.1.2",
    "cross-env": "^7.0.3",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "webpack": "^5.82.1",
    "webpack-cli": "^5.1.1",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@types/cors": "^2.8.13",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "eslint": "8.22.0",
    "express": "^4.18.2",
    "formidable": "^2.1.1",
    "fs": "^0.0.1-security",
    "helmet": "^6.1.5",
    "newrelic": "^10.1.0"
  }
}
